#!/bin/sh

set +e

dirname=`dirname $0`
retval=0

case $dirname in
	/*)
		cd $dirname/../.. > /dev/null
		path=`pwd`
		cd - > /dev/null
	;;
	*)
		cd `pwd`/$dirname/../.. > /dev/null
		path=`pwd`
		cd - > /dev/null
	;;
esac

export PYTHONPATH=$path/lib

cd $path/etc/exabgp > /dev/null
names=`ls *.conf`
cd - > /dev/null

for conf in $names
do
	printf "%-50s " $conf
	result=`$path/sbin/exabgp validate -nrv $path/etc/exabgp/$conf 2>&1`
	retcode=$?
	problem=`echo $result | grep 'Problem with the configuration file' || true`

	if [ $retcode -eq 0 ] && [ "$problem" = "" ]
	then
		printf "ok\n"
	else
		printf "failed\n"
		printf "\n"
		printf "$path/sbin/exabgp validate -nrvp $path/etc/exabgp/$conf 2>&1"
		printf "\n\n"
		printf "$result"
		printf "\n\n"
		retval=1
	fi
done

exit $retval
