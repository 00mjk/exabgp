#!/bin/sh

dirname=`dirname $0`

if [[ $dirname == /* ]]; then
        path=$dirname/..
else
        cd `pwd`/$dirname/.. > /dev/null
        path=`pwd`
        cd - > /dev/null
fi

export PYTHONPATH=$path/lib
export ETC=$path/etc/bgpd

PYTHON=`which python`
PYPY=`which pypy`

if [ -f "$PYPY" ]
then
	INTERPRETER=$PYPY
elif [ -f "$PYTHON" ]
then
	INTERPRETER=$PYTHON
else
	INTERPRETER=python
fi

$INTERPRETER -m bgp.debug $path/daemon/bgpd $*
